@using stTrackerMVC.ViewModels
@model IEnumerable<UserViewModel>

<h2>Управление пользователями</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Создать нового пользователя</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Роли</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    <a asp-action="ManageRoles" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Роли</a>
                    <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>