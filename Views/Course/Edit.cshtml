@model Course

<h2>@(ViewContext.RouteData.Values["action"].ToString() == "Edit" ? "Редактирование" : "Создание") курса</h2>

<form asp-action="@ViewContext.RouteData.Values["action"]">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProfessorName" class="control-label"></label>
        <input asp-for="ProfessorName" class="form-control" />
        <span asp-validation-for="ProfessorName" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </div>
</form>