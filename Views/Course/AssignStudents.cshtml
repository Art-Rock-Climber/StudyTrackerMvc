@using stTrackerMVC.ViewModels
@model AssignStudentsViewModel

@{
    ViewData["Title"] = $"Назначение студентов на курс: {Model.CourseName}";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AssignStudents" method="post">
    <input type="hidden" asp-for="CourseId" />

    <div class="form-group">
        @for (var i = 0; i < Model.AvailableStudents.Count; i++)
        {
            <div class="form-check">
                <input type="checkbox"
                       asp-for="AvailableStudents[i].IsSelected"
                       class="form-check-input" />
                <label class="form-check-label">
                    @Model.AvailableStudents[i].Name
                </label>
                <input type="hidden" asp-for="AvailableStudents[i].Id" />
                <input type="hidden" asp-for="AvailableStudents[i].Name" />
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>