@using stTrackerMVC.ViewModels
@model CourseTasksVm

@{
    ViewData["Title"] = "AllTasks";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1 class="display-4">Все задания</h1>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Название
            </th>
            <th>
                Дедлайн
            </th>
            <th>
                Статус
            </th>
            <th>
                Курс
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model.Tasks)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Deadline.ToString("dd.MM.yyyyTHH:mm")</td>
                <td>@task.Status</td>
                <td>@task.CourseName</td>
                <td>
                    <a asp-action="Edit" asp-controller="Task" asp-route-id="@task.Id" class="btn btn-sm btn-warning">Изменить</a>
                    <a asp-action="Delete" asp-controller="Task" asp-route-id="@task.Id" class="btn btn-sm btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>