@model CourseTask

@{
    ViewData["Title"] = ViewContext.RouteData.Values["action"].ToString() == "Edit" ?
        "Редактирование задания" : "Создание задания";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="@ViewContext.RouteData.Values["action"]">
    <input type="hidden" asp-for="CourseId" />

    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Deadline" class="control-label"></label>
        <input asp-for="Deadline" type="datetime-local" class="form-control" />
        <span asp-validation-for="Deadline" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <select asp-for="Status" asp-items="Html.GetEnumSelectList<CourseTaskStatus>()" class="form-control"></select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
        <a asp-action="ForCourse" asp-route-courseId="@Model.CourseId" class="btn btn-secondary">Отмена</a>
    </div>
</form>